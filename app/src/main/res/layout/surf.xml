            android:text="Surf School 0879609667"
            android:textColor="#ffffff"
            android:textSize="16dip" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:onClick="Surf2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/textView1"
            android:src="@drawable/call_now_32" />

                <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/imageButton2"
            android:layout_marginTop="21dp"
            android:lines="2"
            android:text="Surf Experience 0851155743"
            android:textColor="#ffffff"
            android:textSize="16dip" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:onClick="Surf3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView2"
            android:src="@drawable/call_now_32" />
        
                <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/imageButton3"
            android:layout_marginTop="21dp"
            android:lines="2"
            android:text="Green Room 0657082771"
            android:textColor="#ffffff"
            android:textSize="16dip" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:onClick="Surf4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView3"
            android:src="@drawable/call_now_32" />        
 
                <TextView
            android:id="@+id/textView5"
